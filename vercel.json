{
  "version": 2,

  "builds": [
    {
      "src": "admin/dist/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "admin"
      }
    },
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/admin/dist/index.html"
    }
  ]
}
